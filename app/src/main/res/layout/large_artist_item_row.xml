<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_row_artist_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/custom_row_artist_song_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/custom_row_artist_songs_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/custom_row_artist_songs_icon"
        app:layout_constraintTop_toTopOf="@+id/custom_row_artist_songs_icon"
        tools:text="No of Songs" />

    <TextView
        android:id="@+id/custom_row_artist_album_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/custom_row_artist_album_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/custom_row_artist_album_icon"
        app:layout_constraintTop_toTopOf="@+id/custom_row_artist_album_icon"
        tools:text="No of Albums" />

    <TextView
        android:id="@+id/custom_row_artist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/custom_row_artist_album_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/custom_row_artist_image"
        app:layout_constraintTop_toTopOf="@+id/custom_row_artist_image"
        tools:text="Artist Name" />

    <ImageView
        android:id="@+id/custom_row_artist_album_icon"
        android:layout_width="18dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Album icon"
        app:layout_constraintBottom_toTopOf="@+id/custom_row_artist_songs_icon"
        app:layout_constraintStart_toStartOf="@+id/custom_row_artist_name"
        app:layout_constraintTop_toBottomOf="@+id/custom_row_artist_name"
        app:srcCompat="@drawable/ic_dvd_disc" />

    <ImageView
        android:id="@+id/custom_row_artist_songs_icon"
        android:layout_width="18dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Artist songs icon"
        app:layout_constraintBottom_toBottomOf="@+id/custom_row_artist_image"
        app:layout_constraintStart_toStartOf="@+id/custom_row_artist_album_icon"
        app:layout_constraintTop_toBottomOf="@+id/custom_row_artist_album_icon"
        app:srcCompat="@drawable/ic_g_clef_symbol" />

    <ImageView
        android:id="@+id/custom_row_artist_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Image of the artist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>